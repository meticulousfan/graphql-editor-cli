{
  "name": "graphql-backend-template",
  "version": "1.0.0",
  "description": "GraphQL Editor template for backend using very fast golang server under the hood",
  "main": "lib/index.js",
  "author": "Artur Czemiel",
  "license": "ISC",
  "scripts": {
    "start": "gaffer",
    "build": "tsc",
    "watch": "tsc --watch",
    "restart-database": "npm run rmdatabase && npm run database",
    "database": "docker run  -d --name mongo -p 27017:27017 mongo",
    "rmdatabase": "docker stop mongo && docker rm mongo",
    "schema": "zeus https://YOUR_GRAPHQL_ENDPOINT ./ -n -g ./ && npx zeus https://YOUR_GRAPHQL_ENDPOINT --ts ./src",
    "create": "plop"
  },
  "devDependencies": {
    "@types/bson": "^4.0.0",
    "@types/graphql": "^14.2.3",
    "@types/mongodb": "^3.2.1",
    "@types/node": "^12.6.9",
    "graphql-zeus": "^1.6.6",
    "plop": "^2.5.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@aexol/gaffer-js": "^0.2.2",
    "mongodb": "^3.3.0-beta2"
  }
}
